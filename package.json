{
  "name": "react-flags-done-right",
  "version": "0.1.0",
  "description": "React component library for country flags with lazy loading support",
  "type": "module",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src/components/**/*.tsx",
    "src/components/**/*.ts",
    "src/index.ts",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "bun run generate:flags && bun run generate:index",
    "build:package": "bun run generate:flags && bun run generate:index",
    "build:demo": "bun build ./src/index.html --outdir=dist-demo --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/index.ts",
    "generate:flags": "bun scripts/generate-flags.ts",
    "generate:index": "bun scripts/generate-flag-index.ts",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "react",
    "flags",
    "country-flags",
    "lazy-loading",
    "suspense",
    "svg"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@svgr/cli": "^8.1.0",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}
