{
  "name": "react-lazy-flags",
  "version": "0.1.4",
  "description": "React component library for country flags with lazy loading support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "dev": "bun run src/test-app.tsx",
    "build": "bun run generate:flags && bun run generate:index",
    "build:package": "bun run generate:flags && bun run generate:index && bun run scripts/build-package.ts",
    "build:demo": "bun build ./src/index.html --outdir=dist-demo --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/index.ts",
    "generate:flags": "bunx svgr --typescript --icon --replace-attr-values \"#000=currentColor\" --filename-case kebab ./src/svg/*.svg --out-dir ./src/components/flags",
    "generate:index": "bun scripts/generate-flag-index.ts",
    "analyze": "bun scripts/analyze-bundle.ts",
    "test": "bun test",
    "prepublishOnly": "bun run build:package"
  },
  "keywords": [
    "react",
    "flags",
    "country-flags",
    "lazy-loading",
    "suspense",
    "svg"
  ],
  "author": "kolengri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kolengri/react-lazy-flags.git"
  },
  "homepage": "https://github.com/kolengri/react-lazy-flags#readme",
  "bugs": {
    "url": "https://github.com/kolengri/react-lazy-flags/issues"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.0.11",
    "@svgr/cli": "^8.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5.0.0"
  }
}
